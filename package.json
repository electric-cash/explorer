{
  "name": "elcash-rpc-explorer",
  "version": "1.8.0",
  "description": "Explorer for Electric Cash and RPC-compatible blockchains",
  "private": false,
  "bin": "bin/cli.js",
  "scripts": {
    "start": "node ./bin/www",
    "start-dev": "nodemon ./bin/www",
    "refresh-mining-pool-configs": "node ./bin/refresh-mining-pool-configs.js",
    "commit-retry": "npx cz --retry"
  },
  "keywords": [
    "elcash",
    "blockchain"
  ],
  "author": "Dan Janosik <dan@47.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electric-cash/explorer.git"
  },
  "dependencies": {
    "async": "2.6.2",
    "basic-auth": "^2.0.1",
    "bitcoin-core": "^1.2.0",
    "bitcoinjs-lib": "5.0.3",
    "body-parser": "~1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.4.0",
    "crypto-js": "3.1.9-1",
    "csurf": "^1.10.0",
    "d3-scale-chromatic": "^1.5.0",
    "debug": "~4.1.1",
    "decimal.js": "10.1.1",
    "dotenv": "^8.0.0",
    "electrum-client": "git+https://git@github.com/chaintools/node-electrum-client.git#43a999036f9c5",
    "express": "^4.17.1",
    "express-session": "1.16.1",
    "helmet": "^4.6.0",
    "jstransformer-markdown-it": "^2.1.0",
    "lru-cache": "5.1.1",
    "md5": "^2.3.0",
    "meow": "^9.0.0",
    "moment": "^2.24.0",
    "moment-duration-format": "2.2.2",
    "morgan": "^1.9.1",
    "pug": "^3.0.2",
    "qrcode": "^1.4.4",
    "redis": "^3.1.2",
    "request": "2.88.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.9",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "commitizen": "^4.2.2",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.7",
    "less": "3.9.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^17.3.1"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
